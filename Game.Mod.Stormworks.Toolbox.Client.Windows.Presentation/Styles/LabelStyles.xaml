<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style 
        x:Key="BasicLabelStyle" 
        TargetType="Label">
        
        <Setter Property="Foreground" Value="{DynamicResource ThemeInteriorPrimarySoft}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <Style 
        x:Key="SectionHeaderLabel" 
        TargetType="Label" 
        BasedOn="{StaticResource BasicLabelStyle}">
        
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="Padding" Value="0,0,0,2"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeInteriorSecondaryHard}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeSurfaceSecondarySoft}"/>
    </Style>

    <Style 
        TargetType="Label" 
        BasedOn="{StaticResource BasicLabelStyle}"/>

</ResourceDictionary>